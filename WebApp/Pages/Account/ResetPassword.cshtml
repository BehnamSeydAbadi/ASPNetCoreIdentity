@page
@model WebApp.Pages.Account.ResetPasswordModel
@{
}

<h1>ResetPassword</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="ResetPassword">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Dto.Password" class="control-label"></label>
                <input asp-for="Dto.Password" class="form-control" />
                <span asp-validation-for="Dto.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dto.ConfirmPassword" class="control-label"></label>
                <input asp-for="Dto.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Dto.ConfirmPassword" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Dto.Email" class="form-control" />
            <input type="hidden" asp-for="Dto.Token" class="form-control" />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>